<UserControl x:Class="BiblioGest.Views.EmpruntView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BiblioGest.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#FFFFFF">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Panel: Form Section with Curved Design -->
            <Border Grid.Row="0" Background="#8B4513" CornerRadius="15" Padding="20" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header with Icon-like Design -->
                    <Border Grid.Row="0" Background="#FFFFFF" CornerRadius="25" Padding="15,10" Margin="0,0,0,20" HorizontalAlignment="Center">
                        <TextBlock Text="📚 Gestion des Emprunts" FontSize="22" FontWeight="Bold" Foreground="#8B4513" TextAlignment="Center"/>
                    </Border>

                    <!-- Form Fields in Card-like Layout -->
                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <!-- Book Selection Card -->
                            <Border Background="#FFFFFF" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="📖 Livre (ISBN)" FontWeight="SemiBold" Foreground="#8B4513" Margin="0,0,0,8"/>
                                    <ComboBox ItemsSource="{Binding Livres}" DisplayMemberPath="ISBN" SelectedValuePath="ISBN" 
                                             SelectedValue="{Binding NewEmprunt.ISBN}" 
                                             Background="#F5F5F5" Foreground="#8B4513" Padding="8" BorderBrush="#8B4513" BorderThickness="1"/>
                                </StackPanel>
                            </Border>

                            <!-- Member Selection Card -->
                            <Border Background="#FFFFFF" CornerRadius="8" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="👤 Adhérent" FontWeight="SemiBold" Foreground="#8B4513" Margin="0,0,0,8"/>
                                    <ComboBox ItemsSource="{Binding Adherents}" DisplayMemberPath="Nom" SelectedValuePath="Id" 
                                             SelectedValue="{Binding NewEmprunt.AdherentId}" 
                                             Background="#F5F5F5" Foreground="#8B4513" Padding="8" BorderBrush="#8B4513" BorderThickness="1"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Right Column -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <!-- Borrow Date Card -->
                            <Border Background="#FFFFFF" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="📅 Date Emprunt" FontWeight="SemiBold" Foreground="#8B4513" Margin="0,0,0,8"/>
                                    <DatePicker SelectedDate="{Binding NewEmprunt.DateEmprunt}" 
                                               Background="#F5F5F5" Foreground="#8B4513" Padding="8" BorderBrush="#8B4513" BorderThickness="1"/>
                                </StackPanel>
                            </Border>

                            <!-- Return Date Card -->
                            <Border Background="#FFFFFF" CornerRadius="8" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="🔄 Date Retour Prévu" FontWeight="SemiBold" Foreground="#8B4513" Margin="0,0,0,8"/>
                                    <DatePicker SelectedDate="{Binding NewEmprunt.DateRetourPrevu}" 
                                               Background="#F5F5F5" Foreground="#8B4513" Padding="8" BorderBrush="#8B4513" BorderThickness="1"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Action Buttons with Modern Design -->
                    <Border Grid.Row="2" Background="#FFFFFF" CornerRadius="12" Padding="20,15">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="✅ Enregistrer" Command="{Binding AddEmpruntCommand}" 
                                    Width="140" Height="40" Margin="10,0" 
                                    Background="#8B4513" Foreground="#FFFFFF" FontWeight="Bold" 
                                    BorderThickness="0" FontSize="14">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="20" Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Content="📤 Retourner" Command="{Binding ReturnEmpruntCommand}" 
                                    Width="140" Height="40" Margin="10,0" 
                                    Background="#FFFFFF" Foreground="#8B4513" FontWeight="Bold" 
                                    BorderBrush="#8B4513" BorderThickness="2" FontSize="14">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               BorderBrush="{TemplateBinding BorderBrush}" 
                                               BorderThickness="{TemplateBinding BorderThickness}" 
                                               CornerRadius="20" Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Bottom Panel: Enhanced DataGrid -->
            <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="15" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- DataGrid Header -->
                    <Border Grid.Row="0" Background="#8B4513" CornerRadius="8" Padding="15,10" Margin="0,0,0,10">
                        <TextBlock Text="📋 Liste des Emprunts Actifs" FontSize="16" FontWeight="Bold" 
                                  Foreground="#FFFFFF" HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Enhanced DataGrid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Emprunts}" SelectedItem="{Binding SelectedEmprunt}" 
                             AutoGenerateColumns="False" Background="#FFFFFF" 
                             RowBackground="#FFFFFF" AlternatingRowBackground="#F9F9F9" 
                             BorderBrush="#8B4513" BorderThickness="2"
                             GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#E0E0E0"
                             HeadersVisibility="Column" CanUserReorderColumns="False"
                             MaxHeight="400">
                        <DataGrid.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </DataGrid.ItemsPanel>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#8B4513"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="BorderBrush" Value="#FFFFFF"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Margin" Value="0,1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFF8DC"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#DEB887"/>
                                        <Setter Property="Foreground" Value="#8B4513"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="📚 ISBN" Binding="{Binding ISBN}" Width="*" 
                                               Foreground="#8B4513" FontWeight="SemiBold">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="8,5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="👤 Adhérent ID" Binding="{Binding AdherentId}" Width="*" 
                                               Foreground="#8B4513" FontWeight="SemiBold">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="8,5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="📅 Date Emprunt" Binding="{Binding DateEmprunt}" Width="*" 
                                               Foreground="#8B4513" FontWeight="SemiBold">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="8,5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="🔄 Retour Prévu" Binding="{Binding DateRetourPrevu}" Width="*" 
                                               Foreground="#8B4513" FontWeight="SemiBold">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="8,5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="✅ Retour Effectif" Binding="{Binding DateRetourEffectif}" Width="*" 
                                               Foreground="#8B4513" FontWeight="SemiBold">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Padding" Value="8,5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>